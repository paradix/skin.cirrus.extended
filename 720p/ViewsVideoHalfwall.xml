<includes>
<!-- ===================================================================================== -->
<!-- ============================== HALF WALL VIEW ID 514 ================================ -->
<!-- =================================== Movies Only ===================================== -->
	<include name="HalfWallView">
		<control type="group">
		<animation type="WindowOpen" reversible="false">
			<effect type="zoom" start="80" end="100" center="640,360" easing="out" tween="back" time="300" />
			<effect type="fade" start="0" end="100" time="300" />
			</animation>
			<animation type="WindowClose" reversible="false">
			<effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300" />
			<effect type="fade" start="100" end="0" time="300" />
			</animation>      
			<visible>Control.IsVisible(514)</visible>
			<control type="image"> <!-- darken the background a bit -->
				<posx>0</posx>
				<posy>0</posy>
				<width>660</width>
				<height>720</height>
				<aspectratio>stretch</aspectratio>
 				<texture>black-back.png</texture>
			</control>
			<control type="image"> <!-- right panel behind the wall -->
				<posx>620r</posx>
				<posy>0</posy>
				<width>620</width>
				<height>720</height>
				<texture border="15,0,0,0">homesubbackground.png</texture>
			</control>
			<!-- PANEL -->
			
			<control type="panel" id="514">
			<animation type="WindowOpen" reversible="false">
			<effect type="zoom" start="80" end="100" center="640,360" easing="out" tween="back" time="300" />
			<effect type="fade" start="0" end="100" time="300" />
			</animation>
			<animation type="WindowClose" reversible="false">
			<effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300" />
			<effect type="fade" start="100" end="0" time="300" />
			</animation>      
				<posx>670</posx>
				<posy>50</posy>
				<width>680</width>
				<height>650</height>
				<onleft>2</onleft>
				<onright>60</onright>
				<onup>514</onup>
				<ondown>514</ondown>
				<viewtype label="41123">panel</viewtype>
				<visible>Skin.HasSetting(halfwall_view)</visible>
				<pagecontrol>60</pagecontrol>
				<scrolltime>200</scrolltime>
				<visible>Container.Content(Movies)</visible>
				<itemlayout height="216" width="144">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>144</width>
						<height>216</height>
						<aspectratio>stretch</aspectratio>
						<fadetime>200</fadetime>
						<texture background="true">$INFO[Listitem.Icon]</texture> 
						<bordertexture border="8">contentpanelvertical.png</bordertexture>
						<bordersize>8</bordersize>
					</control>
					<control type="image">
						<posx>105</posx>
						<posy>170</posy>
						<width>30</width>
						<height>40</height>
						<texture>$INFO[ListItem.Overlay]</texture>
					</control>
					<control type="image">
						<posx>5</posx>
						<posy>3</posy>
						<width>91</width>
						<height>91</height>
						<texture>Overlayicons/TrailerOverlay.png</texture>
						<visible>!IsEmpty(ListItem.Trailer) + !Skin.HasSetting(trailerflag)</visible>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>144</width>
						<height>216</height>
						<aspectratio>stretch</aspectratio>
						<fadetime>200</fadetime>
						<texture background="true">black-back3.png</texture> 
					</control>
				</itemlayout>
				<focusedlayout height="323" width="225">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>144</width>
						<height>216</height>
						<aspectratio>stretch</aspectratio>
						<fadetime>200</fadetime>
						<texture background="true">$INFO[Listitem.Icon]</texture> 
						<bordertexture border="8">contentpanelvertical.png</bordertexture>
						<bordersize>8</bordersize>
					</control>
					<control type="image">
						<posx>105</posx>
						<posy>170</posy>
						<width>30</width>
						<height>40</height>
						<texture>$INFO[ListItem.Overlay]</texture>
					</control>
					<control type="image">
						<posx>5</posx>
						<posy>3</posy>
						<width>91</width>
						<height>91</height>
						<texture>Overlayicons/TrailerOverlay.png</texture>
						<visible>!IsEmpty(ListItem.Trailer) + !Skin.HasSetting(trailerflag)</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="group"> <!-- Labels -->
				<posx>20</posx>
				<posy>120</posy>
				<visible>Container.Content(Movies)</visible>
				<control type="fadelabel">
					<posx>0</posx>
					<posy>-60</posy>
					<width>620</width>
					<height>30</height>
					<font>cirrus_40</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<scroll>true</scroll>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Title]</label>
					<scrollout>false</scrollout>
					<pauseatend>2000</pauseatend>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>40</posy>
					<width>480</width>
					<height>30</height>
					<font>cirrus_24</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<scroll>false</scroll>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Genre,[COLOR=accent]$LOCALIZE[515]:[/COLOR] ]</label>
					<scrollout>false</scrollout>
					<pauseatend>2000</pauseatend>
				</control>
				<control type="fadelabel">
					<posx>0</posx>
					<posy>80</posy>
					<width>220</width>
					<height>30</height>
					<font>cirrus_30</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<scroll>true</scroll>
					<align>left</align>
					<aligny>center</aligny>
					<label>[COLOR=accent]$INFO[ListItem.Year][/COLOR] $INFO[ListItem.Duration]</label>
					<scrollout>false</scrollout>
					<pauseatend>2000</pauseatend>
					<visible>SubString(ListItem.Duration,mins)</visible>
					<visible>!ListItem.IsFolder</visible>
				</control>
				<control type="label">
					<description>Trailer Label while movie is playing</description>
					<posx>150</posx>
					<posy>80</posy>
					<width>200</width>
					<height>30</height>
					<align>center</align>
					<aligny>center</aligny>
					<label>20410</label>
					<font>cirrus_30</font>
					<textcolor>accent</textcolor>
					<shadowcolor>black</shadowcolor>
					<visible>!IsEmpty(ListItem.Trailer) + Skin.HasSetting(trailerflag)</visible>
					<visible>!ListItem.IsFolder</visible>
					</control>
				<control type="fadelabel">
					<posx>0</posx>
					<posy>80</posy>
					<width>220</width>
					<height>30</height>
					<font>cirrus_30</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<scroll>true</scroll>
					<align>left</align>
					<aligny>center</aligny>
					<label>[COLOR=accent]$INFO[ListItem.Year][/COLOR] $INFO[ListItem.Duration] mins</label>
					<scrollout>false</scrollout>
					<pauseatend>2000</pauseatend>
					<visible>!SubString(ListItem.Duration,mins)</visible>
					<visible>!ListItem.IsFolder</visible>
				</control>
				<control type="textbox">
					<description>Movie Plot</description>
					<posx>0</posx>
					<posy>120</posy>
					<width>620</width>
					<height>110</height>
					<font>cirrus_20</font>
					<align>justify</align>
					<textcolor>white</textcolor>
					<label>$INFO[ListItem.Plot]</label>
					<autoscroll time="2000" delay="3000" repeat="5000">Skin.HasSetting(AutoScroll)</autoscroll>
				</control>
			</control>
			<control type="grouplist">
				<description>MPAA Rating Flagging Images</description>
				<posx>22</posx>
				<posy>100</posy>
				<width>249</width>
				<align>left</align>
				<itemgap>0</itemgap>
				<orientation>horizontal</orientation>
				<include>VideoMPAAFlaggingConditions</include>
				<visible>!Skin.HasSetting(NewMPAAFlags)</visible>
				<visible>!Skin.HasSetting(noMPAAStudioFlags)</visible>
				<visible>!ListItem.IsFolder</visible>
			</control>
			<control type="grouplist">
				<description>MPAA NEW Rating Flagging Images</description>
				<posx>11</posx>
				<posy>100</posy>
				<width>249</width>
				<align>left</align>
				<itemgap>0</itemgap>
				<orientation>horizontal</orientation>
				<include>NewVideoMPAAFlaggingConditions</include>
				<visible>Skin.HasSetting(NewMPAAFlags)</visible>
				<visible>!Skin.HasSetting(noMPAAStudioFlags)</visible>
				<visible>!ListItem.IsFolder</visible>
			</control>
			<control type="group"> <!-- Fanart and media flags -->
				<posx>10</posx>
				<posy>330</posy>
				<width>640</width>
				<height>360</height>
				<animation type="WindowOpen" reversible="false">
				<effect type="zoom" start="80" end="100" center="640,360" easing="out" tween="back" time="300" />
				<effect type="fade" start="0" end="100" time="300" />
				</animation>
				<animation type="WindowClose" reversible="false">
				<effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300" />
				<effect type="fade" start="100" end="0" time="300" />
				</animation>      
				 <control type="image">
					<posx>10</posx>
					<posy>45</posy>
					<width>540</width>
					<height>303</height>
					<aspectratio aligny="bottom">stretch</aspectratio>
					<fadetime>FanartCrossfadeTime</fadetime>
					<texture>black-back.png</texture>
					<bordertexture border="8">contentpanelvertical.png</bordertexture>
					<bordersize>8</bordersize>
					<visible>!Player.HasVideo | !Skin.HasSetting(videowindownoborder) | !Skin.HasSetting(videowindowglobal)</visible>
					<visible>!IsEmpty(ListItem.Thumb)</visible> 
				</control>
				<control type="image">
					<posx>10</posx>
					<posy>45</posy>
					<width>540</width>
					<height>303</height>
					<aspectratio>stretch</aspectratio>
					<fadetime>FanartCrossfadeTime</fadetime>
					<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
					<visible>!Player.HasVideo | !Skin.HasSetting(videowindowglobal)</visible>
					<bordersize>8</bordersize>
				</control>
				<control type="multiimage">
					<posx>18</posx>
					<posy>53</posy>
					<width>524</width>
					<height>287</height>
					<aspectratio>stretch</aspectratio>
