						<posx>0</posx>
						<posy>-40</posy>
						<width>400</width>
						<height>25</height>
						<label>$INFO[ListItem.Title]</label>
						<scroll>true</scroll>
						<align>left</align>
						<aligny>top</aligny>
						<font>cirrus_24</font>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
						<wrapmultiline>false</wrapmultiline>
						<visible>!Container.Content(Albums)</visible>
					</control> -->
					<control type="label">
						<posx>0</posx>
						<posy>120</posy>
						<width>400</width>
						<height>25</height>
						<label fallback="416">[COLOR=accent]$LOCALIZE[515]: [/COLOR]$INFO[listitem.genre]</label>
						<scroll>true</scroll>
						<align>left</align>
						<aligny>top</aligny>
						<font>cirrus_24</font>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
						<wrapmultiline>false</wrapmultiline>
						<visible>Container.Content(Albums) + !Container.Content(Artists)</visible>
					</control>
					<control type="label">
						<description>Trackno txt</description>
						<posx>0</posx>
						<posy>120</posy>
						<width>400</width>
						<height>25</height>
						<label>$INFO[listitem.TrackNumber,$LOCALIZE[31310]: ]</label>
						<align>left</align>
						<aligny>top</aligny>
						<font>cirrus_24</font>
						<textcolor>white</textcolor>
						<visible>!Container.Content(Albums) + !Container.Content(Artists) + !Container.Content(Genres)</visible>
					</control>
					<control type="label">
						<description>Year txt</description>
						<posx>0</posx>
						<posy>80</posy>
						<width>400</width>
						<height>25</height>
						<label>$INFO[listitem.Year]</label>
						<align>left</align>
						<aligny>center</aligny>
						<font>cirrus_30</font>
						<textcolor>white</textcolor>
					</control>
				</control>
				 <control type="scrollbar" id="60">
        <posx>10</posx>
        <posy>100</posy>
        <width>25</width>
        <height>220</height>
        <texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
        <textureslidernib>ScrollBarV.png</textureslidernib>
        <textureslidernibfocus>ScrollBarV_bar_focus.png</textureslidernibfocus>
        <onleft>2</onleft>
        <onright>566</onright>
        <showonepage>false</showonepage>
        <orientation>vertical</orientation>
        <visible>Control.IsVisible(566)</visible>
		<visible allowhiddenfocus="true">Control.IsVisible(566) + Control.HasFocus(60)</visible>
      </control>
			</control>
		</control>
	</include>
</includes>