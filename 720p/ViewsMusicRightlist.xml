						<posx>0</posx>
						<posy>0</posy>
						<width>400</width>
						<height>25</height>
						<label>$INFO[ListItem.Artist]</label>
						<scroll>true</scroll>
						<align>left</align>
						<aligny>center</aligny>
						<font>cirrus_20</font>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
					</control> -->
					<control type="label">
						<posx>0</posx>
						<posy>35</posy>
						<width>400</width>
						<height>25</height>
						<label>$INFO[ListItem.Album]</label>
						<wrapmultiline>false</wrapmultiline>
						<align>left</align>
						<aligny>center</aligny>
						<font>cirrus_30</font>
						<textcolor>grey2</textcolor>
						<shadowcolor>black</shadowcolor>
					</control>
