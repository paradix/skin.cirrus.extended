<includes>
	<include name="RightMusicView">
		<control type="group">
		<animation type="WindowOpen" reversible="false">
			<effect type="zoom" start="80" end="100" center="640,360" easing="out" tween="back" time="300" />
			<effect type="fade" start="0" end="100" time="300" />
			</animation>
			<animation type="WindowClose" reversible="false">
			<effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300" />
			<effect type="fade" start="100" end="0" time="300" />
			</animation>      
			<visible>Control.IsVisible(566)</visible>
			<include>VisibleFadeEffect</include>
			<control type="image"> <!-- bottom bar background -->
				<posx>0</posx>
				<posy>210r</posy>
				<width>1280</width>
				<height>700</height>
				<aspectratio>stretch</aspectratio>
 				<texture>rightlistbackground.png</texture>
				<visible>!Container.Content(Genres)</visible>
			</control>
			<control type="image"> <!-- Black gradient down the bottom -->
				<posx>0</posx>
				<posy>300r</posy>
				<width>1280</width>
				<height>500</height>
				<texture>homenowplayingback.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="image"><!-- Black gradient up the top -->
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>300</height>
				<texture>blackgradientvert.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="image">
				<posx>700r</posx>
				<posy>0</posy>
				<width>700</width>
				<height>720</height>
				<texture flipx="true">blackgradient.png</texture>
			</control>
			<!-- RIGHT LIST -->
			<control type="list" id="566">
				<posx>600r</posx>
				<posy>90</posy>
				<width>600</width>
				<height>420</height>
				<onright>2</onright>
				<onleft>60</onleft>
				<onup>566</onup>
				<ondown>566</ondown>
				<viewtype label="41114">list</viewtype>
				<focusposition>1</focusposition>
				<pagecontrol>60</pagecontrol>
				<scrolltime>200</scrolltime>
				<visible>Window.IsVisible(MusicFiles) | Window.IsVisible(MusicPlaylist) |  Container.Content(Songs) | Container.Content(Albums) | Container.Content(Artists) | Container.Content(Genres)</visible>
				<itemlayout height="70" width="580">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>700</width>
						<height>70</height>
						<aligny>bottom</aligny>
						<texture border="2,2,2,2" diffuse="rowdiffuse.png">rowblank2.png</texture>
					</control>
					<control type="label">
						<description>Title</description>
						<posx>10r</posx>
						<posy>5</posy>
						<width>445</width>
						<height>35</height>
						<label>$INFO[listitem.Label]</label>
						<selectedcolor>accent</selectedcolor>
						<align>right</align>
						<aligny>top</aligny>
						<font>cirrus_24</font>
						<textcolor>white</textcolor>
						<scroll>false</scroll>
					</control>
					<control type="label">
						<description>Artist</description>
						<posx>10r</posx>
						<posy>35</posy>
						<width>445</width>
						<height>35</height>
						<label>$INFO[listitem.Label2]</label>
						<selectedcolor>accent</selectedcolor>
						<align>right</align>
						<aligny>bottom</aligny>
						<font>cirrus_20</font>
						<textcolor>white</textcolor>
						<scroll>false</scroll>
					</control>
				</itemlayout>
				<focusedlayout height="70" width="580">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>700</width>
						<height>70</height>
						<texture border="2,2,2,2">rowfocusback.png</texture>
					</control>
					<control type="label">
						<description>Title</description>
						<posx>10r</posx>
						<posy>5</posy>
						<width>445</width>
						<height>35</height>
						<label>$INFO[listitem.Label]</label>
						<selectedcolor>black</selectedcolor>
						<align>right</align>
						<aligny>top</aligny>
						<font>cirrus_24_Bold</font>
						<textcolor>black</textcolor>
						<scroll>false</scroll>
					</control>
					<control type="label">
						<description>Artist</description>
						<posx>10r</posx>
						<posy>35</posy>
						<width>445</width>
						<height>35</height>
						<label>$INFO[listitem.Label2]</label>
						<selectedcolor>black</selectedcolor>
						<align>right</align>
						<aligny>bottom</aligny>
						<font>cirrus_20</font>
						<textcolor>black</textcolor>
						<scroll>false</scroll>
					</control>				
				</focusedlayout>
			</control>
			<!-- END OF LIST BIT -->
			<control type="group">
				<visible>Control.IsVisible(566)</visible>
				<control type="group">
					<posx>20</posx>
					<posy>330</posy>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>350</width>
						<height>350</height>
						<aspectratio aligny="bottom">stretch</aspectratio>
						<fadetime>IconCrossfadeTime</fadetime>
						<texture>black-back.png</texture>
					    <bordertexture border="8">ContentPanelvertical.png</bordertexture>
					    <bordersize>8</bordersize>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>350</width>
						<height>350</height>
						<aspectratio aligny="bottom">stretch</aspectratio>
						<fadetime>IconCrossfadeTime</fadetime>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<bordersize>8</bordersize>
						<visible>!Container.Content(Genres)</visible>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>350</width>
						<height>350</height>
						<aspectratio aligny="bottom">stretch</aspectratio>
						<fadetime>IconCrossfadeTime</fadetime>
						<texture fallback="special://skin/extras/musicgenres/default.png">special://skin/extras/musicgenres/$INFO[ListItem.Label].png</texture>
						<bordersize>8</bordersize>
						<visible>Container.Content(Genres) + Window.IsVisible(MusicLibrary)</visible>
					</control>
				</control>
				<control type="group">
					<posx>380</posx>
					<posy>520</posy>
					<control type="image"> <!-- logo mod -->
							<posx>570</posx>
							<posy>40</posy>
							<width>300</width>
							<height>80</height>
							<aspectratio scalediffuse="false" aligny="center" align="right">keep</aspectratio> 
							<fadetime>200</fadetime>
							<texture background="true">$INFO[Skin.String(Music_Folder_Path)]$INFO[ListItem.Artist]/logo.png</texture>
					</control>
