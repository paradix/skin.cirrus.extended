<includes>
<!-- ===================================================================================== -->
<!-- ============================== Music Logo Rightlist VIEW ID 701============================== -->
<!-- =================================== TV Shows only =================================== -->
	<include name="MusicLogo_Rightlist">
		<control type="group">
		<animation type="WindowOpen" reversible="false">
			<effect type="zoom" start="80" end="100" center="640,360" easing="out" tween="back" time="300" />
			<effect type="fade" start="0" end="100" time="300" />
			</animation>
			<animation type="WindowClose" reversible="false">
			<effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300" />
			<effect type="fade" start="100" end="0" time="300" />
			</animation>      
			<visible>Control.IsVisible(701)</visible>
			<include>VisibleFadeEffect</include>
			<control type="image"> 
				<posx>0</posx>
				<posy>155r</posy>
				<width>1280</width>
				<height>700</height>
				<aspectratio>stretch</aspectratio>
 				<texture>rightlistbackground.png</texture>
			</control>
			<control type="image"> <!-- Black gradient down the bottom -->
				<posx>0</posx>
				<posy>300r</posy>
				<width>1280</width>
				<height>500</height>
				<texture>homenowplayingback.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="image"><!-- Black gradient up the top -->
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>300</height>
				<texture>blackgradientvert.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="image">
				<posx>700r</posx>
				<posy>0</posy>
				<width>700</width>
				<height>720</height>
				<texture flipx="true">blackgradient.png</texture>
			</control>
			<!-- list -->
			<control type="list" id="701">
				<posx>600r</posx>
				<posy>90</posy>
				<width>600</width>
				<height>420</height>
				<onleft>4</onleft>
				<onright>4</onright>
				<onup>701</onup>
				<ondown>701</ondown>
				<viewtype label="MusicLogoRightlist">list</viewtype>
				<focusposition>1</focusposition>
				<movement>9</movement>
				<scrolltime>200</scrolltime>
				<visible>Container.Content(Artists)</visible>
				<itemlayout height="70" width="580">
					<control type="group"> <!-- Logo mod -->
						<posx>0</posx>
						<posy>0</posy>
					</control>
					 <control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>700</width>
						<height>70</height>
						<aligny>bottom</aligny>
						<texture border="2,2,2,2" diffuse="rowdiffuse.png">rowblank2.png</texture>
					</control>
					<control type="label">
						<description>Artist</description>
						<posx>10r</posx>
						<posy>5</posy>
						<width>445</width>
						<height>35</height>
						<label>$INFO[listitem.Artist]</label>
						<selectedcolor>accent</selectedcolor>
						<align>right</align>
						<aligny>top</aligny>
						<font>cirrus_24</font>
						<textcolor>grey2</textcolor>
						<scroll>false</scroll>
					</control>
				</itemlayout>
				<focusedlayout height="70" width="580">
						<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>700</width>
						<height>70</height>
						<texture border="2,2,2,2">rowfocusback.png</texture>
					</control>
					<control type="label">
						<description>Artist</description>
						<posx>10r</posx>
						<posy>5</posy>
						<width>445</width>
						<height>35</height>
						<label>$INFO[listitem.Artist]</label>
						<selectedcolor>black</selectedcolor>
						<align>right</align>
						<aligny>top</aligny>
						<font>cirrus_24_Bold</font>
						<textcolor>black</textcolor>
						<scroll>false</scroll>
					</control>
				</focusedlayout>
			</control>
			<!-- END OF LIST BIT -->
			<control type="group">
				<visible>Control.IsVisible(701)</visible>
				<control type="group">
					<posx>20</posx>
					<posy>200</posy>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>350</width>
						<height>350</height>
						<aspectratio aligny="bottom">stretch</aspectratio>
						<fadetime>IconCrossfadeTime</fadetime>
						<texture>black-back.png</texture>
					    <bordertexture border="8">ContentPanelvertical.png</bordertexture>
					    <bordersize>8</bordersize>
						<visible>!Container.Content(Genres)</visible>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>350</width>
						<height>350</height>
						<aspectratio aligny="bottom">stretch</aspectratio>
						<fadetime>IconCrossfadeTime</fadetime>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<bordersize>8</bordersize>
						<visible>!Container.Content(Genres)</visible>
					</control>
				</control>
				<control type="group">
					<posx>25</posx>
					<posy>600</posy>
					     <control type="image"> <!-- logo mod -->
							<posx>780</posx>
							<posy>-15</posy>
							<width>300</width>
							<height>80</height>
							<aspectratio scalediffuse="false" aligny="center" align="right">keep</aspectratio> 
							<fadetime>200</fadetime>
							<texture background="true">$INFO[Skin.String(Music_Folder_Path)]$INFO[ListItem.Artist]/logo.png</texture>
					    </control>
					    <control type="textbox">
		                	<posx>0</posx>
			                <posy>-20</posy>
		                 	<width>720</width>
		                	<height>92</height>
		                	<label>$INFO[ListItem.Property(Artist_Description)]</label>
		                	<autoscroll time="3400" delay="6000" repeat="8000">Skin.HasSetting(autoscroll)</autoscroll>
			                <font>cirrus_20</font>
			                <textcolor>white</textcolor>
		                </control>	
                       <control type="label">
							<posx>0</posx>
							<posy>92</posy>
							<width>800</width>
							<height>25</height>
							<font>cirrus_20</font>
							<textcolor>white</textcolor>
							<label>[COLOR=accent]$LOCALIZE[515]: [/COLOR]$INFO[ListItem.Property(Artist_Genre)]</label>
							<visible>!IsEmpty(ListItem.Property(Artist_Mood))</visible>
				</control>		
				</control>
			</control>
		</control>
	</include>
</includes>
