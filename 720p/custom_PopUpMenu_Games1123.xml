<!-- pop-up menu for games trailer -->


<window id="1123" type="dialog">
  <defaultcontrol>9021</defaultcontrol>
  
  <controls>
    <control type="group">
	
		<animation effect="slide" start="0,0" end="280,0" time="400" tween="quadratic" easing="out" condition="ControlGroup(9021).HasFocus">WindowOpen</animation>
		<animation effect="slide" start="0,0" end="-380,0" time="400" tween="quadratic" easing="out" condition="ControlGroup(1123).HasFocus">WindowClose</animation>

		<control type="button" id="8999">
			<description>Fake button for mouse control</description>
			<posx>-260</posx>
			<posy>0</posy>
			<width>265</width>
			<height>720</height>
			<label>-</label>
			<font>-</font>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
			<visible>true</visible>
		</control>

		<!-- Menu background panel -->
		<control type="image">
			<posx>-820</posx>
			<posy>0</posy>
			<width>820</width>
			<height>720</height>
			<texture border="5">dialogbackground.png</texture>
			<aspectratio>stretch</aspectratio>
		</control>
		<control type="image">
			<posx>-820</posx>
			<posy>0</posy>
			<width>820</width>
			<height>720</height>
			<texture border="5">dialogbackground.png</texture>
			<aspectratio>stretch</aspectratio>
		</control>
		<control type="image">
			<posx>-250</posx>
			<posy>650</posy>
			<width>160</width>
			<height>40</height>
			<texture>xbmc_logo_white.png</texture>
		</control>
		<control type="group">   
			<posx>-240</posx>
			<posy>20</posy>
			<control type="label">
				<description>View options</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>250</width>
				<height>30</height>
				<font>cirrus_24</font>
				<textcolor>accent</textcolor>
				<shadowcolor>black</shadowcolor>
				<scroll>false</scroll>
				<align>left</align>
				<aligny>center</aligny>
				<label>Playback Options</label>
			</control>
		</control>

		<!-- MENU ITEMS BELOW -->
		<control type="group" id="9021">
			<posx>-260</posx>
			<posy>70</posy>
			<control type="button" id="2">
				<description>Trailer Windowed</description>
				<posx>0</posx>
				<posy>0</posy>
				<include>ButtonCommonValues</include>
				<description>Trailer Windowed</description>
                <onclick>Dialog.Close(1123)</onclick>
                <onclick>XBMC.PlayMedia($INFO[Skin.String(Menu_GameCustom1_Label)]/$INFO[ListItem.label]/trailer.mp4,1)</onclick>
                <label>41204</label>
				<onleft>9021</onleft>
				<onright>9021</onright>
				<onup>5</onup>
				<ondown>3</ondown>
			</control>
			<control type="button" id="3">
				<description>Trailer Fullscreen</description>
				<posx>0</posx>
				<posy>40</posy>
				<include>ButtonCommonValues</include>
				<description>TrailerFullscreen</description>
                <onclick>Dialog.Close(1123)</onclick>
				<onclick>Dialog.Close(1122)</onclick>
                <onclick>XBMC.PlayMedia($INFO[Skin.String(Menu_GameCustom1_Label)]/$INFO[ListItem.label]/trailer.mp4)</onclick>
                <label>41205</label>
				<onleft>9021</onleft>
				<onright>9021</onright>
				<onup>2</onup>
				<ondown>5</ondown>
			</control>
			<control type="button" id="5">
				<description>Exit</description>
				<posx>0</posx>
				<posy>120</posy>
			    <onclick>Dialog.Close(1123)</onclick>
                <label>13012</label>
				<include>ButtonCommonValues</include>
				<onleft>9021</onleft>
				<onright>9021</onright>
				<onup>3</onup>
				<ondown>2</ondown>
			</control>
        </control>
    </control>
    
    </controls>
</window>